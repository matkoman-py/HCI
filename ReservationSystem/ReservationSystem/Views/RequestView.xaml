<Window x:Class="ReservationSystem.Views.RequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReservationSystem.Views"
        mc:Ignorable="d"
        Title="Pregled predloga" Height="500" Width="800">
    <Grid>
        <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center">
            <Label  Margin="10" Content="Zadaci:" />
            <ListView  Margin="10"  Name="Zadaci" VerticalAlignment="Top" Width="600" Height="160">
                <ListViewItem Content="Zadatak 1"></ListViewItem>
                <ListViewItem Content="Zadatak 2"></ListViewItem>
                <ListViewItem Content="Zadatak 3"></ListViewItem>
            </ListView>
            <Label  Margin="10" Content="Komentar:" />
            <TextBlock Margin="10" Background="LightGray" Width="600" Height="100">Ovo je predlog za moju proslavu.</TextBlock>
            <Button  Content="Posalji odgovor na predlog" Width="200" Margin="35" />
        </StackPanel>

        
    </Grid>
</Window>
