<UserControl x:Class="ReservationSystem.Views.Administrator.AdminPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReservationSystem.Views.Administrator"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1" >
            <Button Height="50" Command="{Binding ToOrganizersCommand}">Organizatori</Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="1">
            <Button Height="50" Command="{Binding ToAssociatesCommand}">Saradnici</Button>
        </StackPanel>
    </Grid>
</UserControl>
